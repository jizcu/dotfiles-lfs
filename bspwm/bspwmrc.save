#! /bin/sh

sxhkd &
feh --bg-scale Pictures/Wallpaper3.png
conky &
picom -b
kitty -e tty-clock -c -f '%A, %B %d %Y'

bspc monitor -d I II III IV V VI VII VIII IX X

# space for conky panel + 10px
bspc config -m DVI-I-1 right_padding 200

bspc config border_width         1
bspc config normal_border_color  '#FC7442'
bspc config focused_border_color '#FC7442'
bspc config top_padding 	0
bspc config bottom_padding 	0
bspc config left_padding 	0
bspc config right_padding 	235

bspc config honor_size_hints	true

bspc config window_gap          10

bspc config split_ratio          	0.50
bspc config borderless_monocle   	true
bspc config gapless_monocle      	true

bspc config ignore_ewmh_focus 		false

bspc rule -a kitty state=floating rectangle=545x350+300+200
bspc rule -a Chromium desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rule -a 'Zathura' follow=on state=tiled

